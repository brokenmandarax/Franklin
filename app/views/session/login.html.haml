%h1 Welcome to Franklin

.tweetme-form
  - form_tag do
    %fieldset
      %legend Please log in!
      %table
        .field
          %tr
            %td
              %label{:for => "email"} Email:
            %td
              = text_field_tag :email, params[:email]
        .field
          %tr
            %td
              %label{:for => "password"} Password:
            %td
              = password_field_tag :password, params[:password]
        .field
          %td
            = submit_tag "Login"
      .field